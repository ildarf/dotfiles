# useful sql-commands

# show grants of user
show grants for 'user'@'host';
show grants for current_user;
show grants;

# add columnt to table
alter table table_name
add column_name datatype [first|after name];

# show users of database
select * from mysql.user;

# get description of a database
desc db_name.table_name;

# show databases
show databases;

# list tables of db
show tables from db_name;

select * from db_name.table_name;

# set constraints
	check 'somecolumn' in ('this', 'that');
	check ('somaval' > 0);
	
# delete statement
delete from 'tablename' where 'somecolumn'='value';


# sqlite show headers and beatify output in column mode
	.headers on
	.mode column

# insert multiple table rows
insert into 'tablename' ('column1', 'column2') values
	('data1', 'data2'),
	('data1', 'data2');

# delete user from database
drop user [if exists] user [, user] ...
