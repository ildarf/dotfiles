# browser-aliases

alias alias.browser='vim ~/.alias/alias.browser && source ~/.alias/alias.browser'

newbrowse() {
	echo "alias $1=\"chromium '$2'\"" >> ~/.alias/alias.browser
	source ~/.alias/alias.browser
}

alias filmprog="chromium 'http://www.filmkunstkinos.de/programm/677.php'"
alias progmus="chromium 'http://musicforprogramming.net/?two'"
